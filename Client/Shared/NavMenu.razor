<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HotelFinal</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="RoomCatalog">
                <i class="bi bi-book-half me-2"></i> Room Catalog
            </NavLink>
        </div>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="BookingReservation">
                        <i class="bi bi-search me-2"></i> Find a Room
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="CancelReservation">
                        <i class="bi bi-x-square me-2"></i> Cancel Reservation
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Administrator, Staff">
            <hr class="text-white mx-4" />
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Checkin">
                    <i class="bi bi-box-arrow-right me-2"></i> Guest Check In
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Checkout">
                    <i class="bi bi-box-arrow-left me-2"></i> Guest Check Out
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="RoomCleaning">
                    <i class="bi bi-recycle me-2"></i> Room Cleaning
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="Administrator">
            <Authorized>
                <hr class="text-white mx-4"/>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Occupiedrooms">
                        <i class="bi bi-list-stars me-2"></i> Occupied Room Report
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="cleanRooms">
                        <i class="bi bi-list-check me-2"></i> Room Cleaning Report
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="reservationInfo">
                        <i class="bi bi-list-task me-2"></i> Reservation Report
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
